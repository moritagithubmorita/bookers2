<div id="notice">
  <%= notice %>
</div>
<div id="alert">
  <%= alert %>
</div>

<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h1>welcome to <i class="fas fa-book"></i><strong>Bookers</strong>!!</h1>
      <p>
        In <i class="fas fa-book"></i><strong>Bookers</strong>,<br>
        <br>
        you can share and exchange your opinions, inpressions, and emotions<br>
        <br>
        about various books!
      </p>

      <div class="col-10 mx-auto btn-wrapper">
        <div class="row">
        <% if user_signed_in? %>
          <%= link_to "Log in", user_path(current_user.id), class:"btn btn-info btn-sm btn-block mb-3" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class:"btn btn-info btn-sm btn-block mb-3" %>
        <% end %>
        </div>
        <div class="row">
        <%= link_to "Sign up", new_user_registration_path, class:"btn btn-success btn-sm btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>