<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <a href = "/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-menu" aria-controls="#nav-manu" aria-expanded="false" aria-label="Toggle Navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="nav-menu">
          <ul class="navbar-nav ml-auto">
            <% if !user_signed_in? %>
              <li><a href='/'>Home</a></li>
              <li><a href='/homes/about'>About</a></li>
              <li><a href='/users/sign_up'>sign up</a></li>
              <li><a href='/users/sign_in'>login</a></li>
            <% else %>
              <li><a href='/'>Home</a></li>
              <li><a href= '/users'>Users</a></li>
              <li><a href='/books'>Books</a></li>
              <li><%= link_to 'logout', '/users/sign_out', method: :delete %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
