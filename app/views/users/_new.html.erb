<section>
  <section>
    <%= render partial: 'users/error', locals: { book: @e_book} %>
  </section>

  <section class="mt-3">
    <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "noimage.jpeg" %>
    <table class="table">
      <tr>
        <td><strong>name</strong></td>
        <td><strong><%= user.name %></strong></td>
      </tr>
      <tr>
        <td><strong>introduction</strong></td>
        <td><strong><%= user.introduction %></strong></td>
      </tr>
    </table>
    <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog mt-4" do %>
    <% end %>
  </section>

  <section>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: Book.new, local:true do |f| %>
      <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
      </div>
      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
    <% end %>
  </section>