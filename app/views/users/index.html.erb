<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render partial: "users/new", locals: { user: @user} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "noimage.jpeg", size: '40x40' %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>