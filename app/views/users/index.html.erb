<div class="container">
  <div class="row">
    <div class="col">
      <%= render partial: "users/new", locals: {user: @user} %>
    </div>
    <div class="col">
      <h1>Users</h1>
      <table>
        <tr>
          <th><strong>image</strong></th>
          <th><strong>name</strong></th>
        </tr>
        <%= @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>