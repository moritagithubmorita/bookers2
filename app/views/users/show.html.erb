<div class="container">
  <div class="row">
    <div class="col">
      <%= render partial: 'users/new', locals: {user: @user, book: @book} %>
      </div>
    <div class="col">
      <h1>Book detail</h1>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @user.books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user :profile_image %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>