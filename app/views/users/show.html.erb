<%#<div> %>
  <%# flash.each do |key, value| %>
    <%#= content_tag :div, value, class: key %>
  <%# end %>
<%#</div>%>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div id="notice">
      <%= notice %>
      </div>
      <div id="alert">
      <%= alert %>
      </div>
      <%= render partial: 'users/new', locals: { user: @user} %>
      </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to "/users/#{@user.id}" do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "noimage.jpeg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>