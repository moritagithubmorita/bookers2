<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div id="notice">
      <%= notice %>
      </div>
      <div id="alert">
      <%= alert %>
      </div>
      <%= render partial: 'users/new', locals: { user: @user} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <div>
                    <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "noimage.jpeg" %><br>
                  <%= @user.name %>
                </div>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", "/books/#{@book.id}", method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>