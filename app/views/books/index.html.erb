<div class="container">
  <div class="row">
    <div class="col">
      <div>
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, class: key %>
        <% end %>
      </div>
      
      <%= notice %>
      <%= alert %>
      
      <%= render partial: "users/new", locals: { user: @user} %>
    </div>
    <div class="col">
      <h1>Books</h1>
      <table>
        <tr>
          <th><strong>Title</strong></th>
          <th><strong>Opinion</strong></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag User.find(book.user_id), :profile_image %><% end %></td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>