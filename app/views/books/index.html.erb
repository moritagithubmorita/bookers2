<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <div id="notice">
          <%= notice %>
        </div>
        <div id="alert">
          <%= alert %>
        </div>
      </div>

      <%= render partial: "users/new", locals: { user: @user} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag User.find(book.user_id), :profile_image, :fill, 40, 40, fallback: "noimage.jpeg", size: '40x40' %>
            <% end %>
          </td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>