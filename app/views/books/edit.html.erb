<section>
  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <h2>Title</h2>
  <%= f.text_field :title %>
  <h2>Opinion</h2>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <p><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></p>
</section>